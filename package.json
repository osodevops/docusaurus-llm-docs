{
  "name": "docusaurus-llm-docs",
  "version": "1.0.0",
  "description": "GitHub Action to generate LLM-optimized documentation from Docusaurus sites",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "test": "vitest"
  },
  "keywords": [
    "docusaurus",
    "llm",
    "documentation",
    "github-action",
    "markdown",
    "ai"
  ],
  "author": "OSO DevOps",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "cheerio": "^1.0.0",
    "glob": "^10.3.10",
    "gray-matter": "^4.0.3",
    "turndown": "^7.2.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.3",
    "@types/node": "^22.10.5",
    "@types/turndown": "^5.0.5",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
